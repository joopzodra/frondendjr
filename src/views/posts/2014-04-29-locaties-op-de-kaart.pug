  script(type='text/javascript' src='/js/leaflet/leaflet-plugins/leaflet.label.js')
  script(type='text/javascript' src='/js/leaflet/proj4js-compressed.js')
  script(type='text/javascript' src='/js/leaflet/proj4leaflet.js')
  script(type='text/javascript' src='/js/leaflet/markerwithlabel_packed.js')
  script(type='text/javascript' src='apps/locaties-op-de-kaart/locaties-op-de-kaart.js')